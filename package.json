{
  "name": "user-checkin",
  "version": "0.0.1",
  "main": "electron/main.js",
  "author": {
    "name": "Sang nguyen",
    "url": "https://github.com/sang2770",
    "email": "nguyenvansang30102001@gmail.com"
  },
  "description": "User Checkin",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --base-href ./",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "electron .",
    "electron:start": "ng build --base-href ./ && electron .",
    "electron:build": "npm run build && electron-builder --win --publish=never"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.0",
    "@angular/cdk": "^18.2.14",
    "@angular/common": "^18.2.0",
    "@angular/compiler": "^18.2.0",
    "@angular/core": "^18.2.0",
    "@angular/forms": "^18.2.0",
    "@angular/material": "^18.2.14",
    "@angular/platform-browser": "^18.2.0",
    "@angular/platform-browser-dynamic": "^18.2.0",
    "@angular/router": "^18.2.0",
    "electron-updater": "^6.6.2",
    "rxjs": "~7.8.0",
    "sqlite3": "^5.1.7",
    "tslib": "^2.3.0",
    "xlsx": "^0.18.5",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.11",
    "@angular/cli": "^18.2.11",
    "@angular/compiler-cli": "^18.2.0",
    "@types/jasmine": "~5.1.0",
    "electron": "^35.1.3",
    "electron-builder": "^26.0.12",
    "jasmine-core": "~5.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.5.2"
  },
  "build": {
    "appId": "com.sang.nv.user-checkin",
    "productName": "User Checkin",
    "icon": "public/logo.ico",
    "directories": {
      "output": "release",
      "buildResources": "public"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "sang2770",
        "repo": "user-checkin"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "deb",
      "maintainer": "Sang Nguyen"
    },
    "extraResources": [
      "./employees.db"
    ]
  }
}
